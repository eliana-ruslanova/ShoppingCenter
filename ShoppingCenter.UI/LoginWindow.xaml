<Window x:Class="ShoppingCenter.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingCenter.UI"
        mc:Ignorable="d"
        Title="Authentication" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Name="textBlockLogin"
            
            TextAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="17"
            FontWeight="Bold"
            FontFamily="Century Gothic">
            Shopping Center Authentication
        </TextBlock>

        <ComboBox 
            Name ="comboBoxEmployeeName"
            Grid.Row="1"
            Height="20"
            Width="200"
            FontFamily="Century Gothic">            
        </ComboBox>

        <Button 
            Name="buttonLogIn"
            Height="30"
            Width="100"
            FontFamily="Century Gothic"
            Grid.Row="2">Log In</Button>
    </Grid>
</Window>
