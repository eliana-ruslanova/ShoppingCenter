<Window x:Class="ShoppingCenter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingCenter.UI"
        mc:Ignorable="d"
        Title="Shopping Center" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="New invoice" ></MenuItem>
                <MenuItem Header="Open invoices" >
                    <MenuItem Header="Search by Id"></MenuItem>
                    <MenuItem Header="Search by employee" ></MenuItem>
                    <MenuItem Header="Search by date" ></MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem Header="Exit" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Add" >
                <MenuItem Header="New employee" ></MenuItem>
                <MenuItem Header="New item" ></MenuItem>
                <MenuItem Header="New brand"></MenuItem>
            </MenuItem>
            <MenuItem Header="View">
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Name="tabControl">
            <TabItem Header="New invoice">
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" Name="dataGridNewInvoice" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridComboBoxColumn Header="Id" Width="50"></DataGridComboBoxColumn>
                                <DataGridCheckBoxColumn Header="Article" Width="420"></DataGridCheckBoxColumn>
                                <DataGridTextColumn Header="Price" Width="100"></DataGridTextColumn>
                                <DataGridTextColumn Header="Discount"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Button Height="25" Width="100" FontSize="13">Total Cost</Button>
                            <TextBlock 
                    Grid.Column="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    FontSize="30"
                    FontWeight="ExtraBold">Total Cost</TextBlock>
                            <Button Grid.Column="2" Height="25" Width="100" FontSize="13">Save invoice</Button>
                        </Grid>
                    </Grid>
                    
                </TabItem.Content>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
